    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Welcome to Oil Rigs</title>
    <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
    <script>
        (adsbygoogle = window.adsbygoogle || []).push({
            google_ad_client: "YOUR_AD_CLIENT_ID",  // Replace with your AdSense client ID
            enable_page_level_ads: true
        });
    </script>
</head>
<body>
    <h1>Welcome to Oil Rigs</h1>
    <button id="watchAdBtn">Watch an ad</button>

    <script>
        document.getElementById('watchAdBtn').addEventListener('click', function() {
            // Create the ad container
            const adContainer = document.createElement('div');
            adContainer.style.width = '320px';
            adContainer.style.height = '100px';
            adContainer.style.marginTop = '20px';

            // Create the ad element
            const ad = document.createElement('ins');
            ad.className = 'adsbygoogle';
            ad.style.display = 'inline-block';
            ad.style.width = '320px';
            ad.style.height = '100px';
            ad.setAttribute('data-ad-client', 'YOUR_AD_CLIENT_ID');  // Replace with your AdSense client ID
            ad.setAttribute('data-ad-slot', 'YOUR_AD_SLOT_ID');  // Replace with your AdSense slot ID

            adContainer.appendChild(ad);
            document.body.appendChild(adContainer);

            // Trigger the ad display
            (adsbygoogle = window.adsbygoogle || []).push({});
        });
    </script>
</body>
</html>
